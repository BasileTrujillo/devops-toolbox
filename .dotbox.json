{
  "verbose": true,

  "ci": {
    "async": true,
    "tasks": [
      {
        "plugin": "nsp",

        "blocking": false
      },
      {
        "plugin": "eslint",

        "blocking": false,
        "checkstyleExport": true,
        "targets": [
          "index.js",
          "plugin",
          "lib"
        ]
      },
      {
        "plugin": "plato",

        "blocking": false,
        "eslintrcPath": ".eslintrc.json",
        "targets": [
          "index.js",
          "lib",
          "plugin"
        ]
      },
      {
        "plugin": "jsdoc",

        "blocking": false,
        "configFilePath": "./jsdoc.conf.json",
        "templatePath": "./node_modules/ink-docstrap/template",
        "packagePath": "./package.json",
        "readmePath": "./README.md",
        "targets": [
          "index.js",
          "lib",
          "plugin"
        ]
      },
      {
        "plugin": "mocha",
        "function": "jenkins"
      }
    ]
  },

  "test": {
    "tasks": [
      {
        "plugin": "mocha",
        "useNyc": true
      }
    ]
  },

  "lint": {
    "tasks": [
      {
        "plugin": "eslint",
        "targets": [
          "index.js",
          "plugin",
          "lib"
        ]
      }
    ]
  }
}
