{
  "verbose": true,

  "ci": {
    "async": false,
    "tasks": [
      {
        "plugin": "eslint",

        "blocking": false,
        "checkstyleExport": true,
        "targets": [
          "index.js",
          "lib/*",
          "plugin/**/*"
        ]
      },
      {
        "plugin": "plato",

        "eslintrcPath": ".eslintrc.json",
        "targets": [
          "index.js",
          "lib",
          "plugin"
        ]
      },
      {
        "plugin": "jsdoc",

        "configFilePath": "./jsdoc.conf.json",
        "templatePath": "./node_modules/ink-docstrap/template",
        "packagePath": "./package.json",
        "readmePath": "./README.md",
        "targets": [
          "index.js",
          "lib",
          "plugin"
        ]
      },
      {
        "plugin": "mocha",
        "function": "jenkins",

        "useNyc": true
      }
    ]
  },

  "deploy": {
    "async": false,
    "tasks": [
      {
        "plugin": "sls",
        "slsFunction": "deploy",
        "removeDevDependencies": true,
        "restoreDevDependencies": true,
        "resolveSymlinks": [
          "config.json"
        ],
        "restoreSymlinks": true
      }
    ]
  },

  "resolve": {
    "tasks": [
      {
        "plugin": "symlink-resolver",

        "links": [
          "config.json"
        ],
        "keepOrig": true
      }
    ]
  },

  "restore": {
    "tasks": [
      {
        "plugin": "symlink-resolver",
        "function": "restore",

        "links": [
          "config.json"
        ]
      }
    ]
  }

}
